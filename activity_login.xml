<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maksymalekseyev.msis_5133.Login"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="46dp">

        </LinearLayout>

        <ImageView
            android:layout_width="192dp"
            android:layout_height="142dp"
            app:srcCompat="@drawable/osu"
            android:id="@+id/imageView8"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="58dp"></LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/textfields"
            android:id="@+id/userName"
            android:textSize="24sp"
            android:paddingLeft="10dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:textColor="?android:attr/colorFocusedHighlight" />

        <TextView
            android:text="USERNAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            tools:textColor="?android:attr/colorActivatedHighlight"
            android:textColor="?android:attr/colorFocusedHighlight"
            tools:textStyle="bold"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:background="@drawable/textfields"
            android:paddingLeft="10dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:id="@+id/password"
            android:textSize="24sp"
            android:textColor="?android:attr/colorFocusedHighlight" />

        <TextView
            android:text="PASSWORD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="?android:attr/colorFocusedHighlight"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="LOGIN"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogin"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_marginRight="10dp"

                android:textColor="@android:color/background_light"
                android:onClick="btnLoginClick"
                android:background="@drawable/buttons"
                />

            <Button
                android:text="SIGNUP"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnSignUp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@android:color/background_light"
                android:background="@drawable/buttons"
                android:onClick="btnSignUpClick"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
